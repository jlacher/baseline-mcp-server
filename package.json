{
  "name": "baseline-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Web Platform Baseline status information",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "baseline-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc --project tsconfig.worker.json",
    "build:all": "npm run build && npm run build:worker",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:worker": "wrangler dev src/worker.ts",
    "deploy": "npm run build:worker && wrangler deploy",
    "test": "node scripts/test.js"
  },
  "keywords": [
    "mcp",
    "web-platform",
    "baseline",
    "browser-support"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18"
  }
}