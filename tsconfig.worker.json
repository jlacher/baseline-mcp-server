{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2022", "WebWorker"],
    "outDir": "./dist",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/worker.ts",
    "src/tools/**/*",
    "src/utils/**/*",
    "src/config/**/*"
  ],
  "exclude": [
    "src/index.ts",
    "src/server/**/*",
    "node_modules",
    "dist"
  ]
}